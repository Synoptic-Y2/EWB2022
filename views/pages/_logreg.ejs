	<script>
		//============================== Check Passwords are same and long enough ==================================
		$(document).ready(function () {
			$("#createAccount").submit(function () {
				var password = $("#password1").val();
				var confirmpassword = $("#password2").val();
				if (password.length > 5) {
					$("#error").text("");
					if (password == confirmpassword) {
						$("#error").text("");
						return true;
					}
					else {
						$("#error").text("Passwords are not the same");
						return false;
					}
				}
				else {
					$("#error").text("Password is not long enough");
					return false;
				}
			})
		})
	</script>
